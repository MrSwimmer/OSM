<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="10dp"
              android:layout_marginBottom="10dp"
              android:orientation="vertical">

    <TextView
        android:id="@+id/title_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:allowUndo="false"
        android:elevation="1dp"
        android:text="Регистрация прошла успешно!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/text_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Вы успешно зарегестрировались в системе.
Вы можете использовать облачное хранилище, для хранения ваших записей.
Выберите нужный вариант."
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="16sp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">

        <RadioButton
            android:id="@+id/radioSwap2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="Использовать текущие данные"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/radioSwap3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Использовать текущие данные и загрузить их в облако"
            android:textSize="16sp"/>

    </RadioGroup>

    <Button
        android:id="@+id/NextBut"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Далее"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"/>

</LinearLayout>