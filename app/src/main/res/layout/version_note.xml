<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/scroller"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.gms.ads.AdView

            android:id="@+id/adViewthree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_idthree">
        </com.google.android.gms.ads.AdView>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:paddingLeft="10dp"
                      android:paddingRight="10dp"
                      android:paddingStart="10dp"
                      android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView9"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Что нового в этой версии?"
                android:textSize="20dp"/>

            <TextView
                style="@style/TextAppearance.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Добавлена возможность регистрироваться в системе используя электронную почту.\nВозможность использовать один аккаунт на нескольких устройствах\nВозможность хранить все записи в облачном хранилище.\nПриложение загружает все ваши записи в облако при запуске приложения."
                android:textSize="17dp"/>

            <TextView
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Что ожидать в следующих версиях?"
                android:textSize="20dp"/>

            <TextView
                style="@style/TextAppearance.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wait"
                android:textSize="17dp"/>
        </LinearLayout>
    </RelativeLayout>


</ScrollView>